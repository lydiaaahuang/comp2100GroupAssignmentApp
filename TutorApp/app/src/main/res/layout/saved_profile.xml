<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/mini_profile"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/saved_profileImage"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/ic_baseline_profile_icon" />

            <ImageView
                android:id="@+id/saved_statusIcon"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-4dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_activity_status_circle" />

        </RelativeLayout>

        <TextView
            android:id="@+id/name_saved_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/mini_profile"
            android:text="My Name"
            android:textColor="@color/purple_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saved_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/name_saved_profile"
            android:text="1344"
            android:textColor="@color/purple_2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/saved_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_saved_profile"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/mini_profile"
            android:text="helloooooooooo"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mini_profile"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:layout_toEndOf="@id/mini_profile"
            android:text="-----------------------------------------------------------------------------------------------"
            android:textColor="@color/mauve_1" />


    </RelativeLayout>

</RelativeLayout>